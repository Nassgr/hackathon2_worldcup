{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Pays en comp√©tition</h1>
    <div class="row pt-3">
        {% for country in countries %}
            <div class="col-md-3 col-sm-6 pl-4 pb-5 mx-auto">
                <figure class="card card-body mx-auto">
                    <a class="linkcard" href="{{ path('country_show', { 'id': country.id }) }}">
                        <h2 class="card-title text-center">{{ country.name | title }}</h2>
                    </a>
                    <div class="stylecard">
                        <a class="linkcard" href="{{ path('country_show', { 'id': country.id }) }}">
                            <img class="img-fluid cardPicture mx-auto mr-5" alt="countryPicture"
                                 src="{{ country.picture }}">
                        </a>
                    </div>
                    <div class="d-flex flex-row mx-auto">
                        <div class="p-2">
                            <form method="post" action="/courses/1">
                                <input type="hidden" name="pariCountry" value="{{ country.name }}">
                                <button class="btn btn-success linkcard" type="submit">Parier!</button>
                            </form>
                        </div>
                    </div>
                </figure>
            </div>
        {% endfor %}
    </div>
{% endblock %}
